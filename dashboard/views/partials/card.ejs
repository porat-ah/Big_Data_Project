<div class="col-lg-3 col-md-6 col-sm-6">
  <div class="card card-stats">
    <div class="card-header <%= color %> card-header-icon">
      <div class="card-icon">
        <i class="material-icons"><%= icon %></i>
      </div>
      <p class="card-category"><%= title %></p>
      <h3 class="card-title"><%= value %>
        <small><%= unit %></small>
      </h3>
    </div>
  </div>
</div>